  </div>
</div>
<script>
  function HeaderCtrl($scope,$http,$location){
    $scope.activeNavLI= $location.path();
    $scope.items= $http.get('data.json').then(function(response) {
      return response.data.showcase;
    });
    $scope.doShowCase=function(img){
      $location.path("/showcases").search('img',img); 
    };
  }
</script>