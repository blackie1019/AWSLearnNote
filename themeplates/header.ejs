      </button>
      <a class="navbar-brand" href="#index"><img src="img/logo.png" /></a>
    </div>

    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li ng-class="{active:activeNavLI=='/keywords'}"><a href="#keywords"><span class="glyphicon glyphicon-book"></span>Keywords</a></li>
        <li ng-class="{active:activeNavLI=='/showcase'}" class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-file"></span>Showcases <b class="caret"></b></a>
          <ul ng-gen-navli class="dropdown-menu" >
            <li ng-repeat="item in items" ng-switch on="item.type">
